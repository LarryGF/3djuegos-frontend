{
  "name": "elecnuxt",
  "version": "1.0.0",
  "description": "Nuxt + Electron",
  "author": "hian <hiancdtrsnm@gmail.com>",
  "private": true,
  "main": "main.js",
  "build": {
    "appId": "GamesCatalog",
    "productName":"GamesCatalog",
    "directories": {
      "buildResources": "static",
      "files":"static/*"
    },
    "extraResources": ["./pysrc", "./pyenv", "./boot.sh"]
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=DEV electron .",
    "build": "nuxt build && electron-builder",
    "buildpage": "nuxt build && cp -r pysrc static",
    "electron": " electron-builder "
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.4.1",
    "@nuxtjs/vuetify": "^0.5.5",
    "nuxt": "^1.4.0",
    "vuetify-loader": "^1.2.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "cross-env": "^5.1.4",
    "electron": "2.0.0-beta.7",
    "electron-builder": "^20.8.1",
    "electron-devtools-installer": "^2.2.3",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0"
  }
}
